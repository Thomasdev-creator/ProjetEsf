{% extends 'base.html.twig' %}

{% block title %}OpeningHours{% endblock %}

{% block body %}
    <h1>Horaires d'ouvertures</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opening_hour.id }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ opening_hour.Heure ? opening_hour.Heure|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ opening_hour.Jour }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_opening_hours_index') }}">Retour</a>

    <a href="{{ path('app_admin_opening_hours_edit', {'id': opening_hour.id}) }}">Modifier</a>

    {{ include('admin_opening_hours/_delete_form.html.twig') }}
{% endblock %}
