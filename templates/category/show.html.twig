{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom
                </th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">Retour
    </a>

    <div>

     <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Modèle</th>
                <th>Contenu</th>
                <th>Prix</th>
                <th>Kilomètre</th>
                <th>Année</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.title }}</td>
                <td>{{ car.content }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.kilometer }}</td>
                <td>{{ car.year }}</td>
                <td>
                    <a href="{{ path('app_cars_show', {'id': car.id}) }}">Consulter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun véhicule trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    </div>

{% endblock %}
