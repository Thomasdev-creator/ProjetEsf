{% extends 'base.html.twig' %}

{% block title %}Cars{% endblock %}

{% block body %}
    <h1>Véhicules</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ car.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ car.content }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Kilomètre</th>
                <td>{{ car.kilometer }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ car.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_employe_cars_index') }}">Retour</a>

    <a href="{{ path('app_employe_cars_edit', {'id': car.id}) }}">Modifier</a>

    {{ include('employe_cars/_delete_form.html.twig') }}
{% endblock %}
