{% extends 'base.html.twig' %}

{% block title %}Reviews index{% endblock %}

{% block body %}
    <h1>Avis clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.content }}</td>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_employe_reviews_show', {'id': review.id}) }}">Consulter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun avis trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
